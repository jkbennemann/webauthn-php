{
    "name": "jkbennemann/webauthn-php",
    "description": "Simple package to implement the Webauthn API standard inside your PHP projects",
    "keywords": [
        "jkbennemann",
        "webauthn-php"
    ],
    "homepage": "https://github.com/jkbennemann/webauthn-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakob Bennemann",
            "email": "github@jakob-bennemann.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Jkbennemann\\Webauthn\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jkbennemann\\Webauthn\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
